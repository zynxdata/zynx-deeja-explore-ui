# Zynx AGI Platform - Production Environment Variables

# Environment
ZYNX_ENVIRONMENT=production
ZYNX_DEBUG=false

# Database
ZYNX_DATABASE_URL=postgresql://zynx:zynx@localhost:5432/zynx_prod
ZYNX_DATABASE_POOL_SIZE=20
ZYNX_DATABASE_MAX_OVERFLOW=30

# Redis
ZYNX_REDIS_URL=redis://localhost:6379
ZYNX_REDIS_POOL_SIZE=10

# Security
ZYNX_SECRET_KEY=zynx-production-secret-key-2025-08-05
ZYNX_ALGORITHM=HS256
ZYNX_ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
ZYNX_API_HOST=0.0.0.0
ZYNX_API_PORT=8000
ZYNX_API_WORKERS=4
ZYNX_API_RELOAD=false

# Frontend
ZYNX_FRONTEND_URL=http://localhost:3000
ZYNX_FRONTEND_API_BASE_URL=http://localhost:8000

# Monitoring
ZYNX_LOG_LEVEL=INFO
ZYNX_METRICS_ENABLED=true
ZYNX_HEALTH_CHECK_ENABLED=true

# Emotion Detection
ZYNX_EMOTION_DETECTION_ENABLED=true
ZYNX_EMOTION_CULTURAL_CONTEXT=thai
ZYNX_EMOTION_CONFIDENCE_THRESHOLD=0.5

# PDPA Compliance
ZYNX_PDPA_ENABLED=true
ZYNX_PDPA_AUDIT_LOGGING=true
ZYNX_PDPA_DATA_RETENTION_DAYS=365

# RAG Pipeline
ZYNX_RAG_ENABLED=true
ZYNX_RAG_MODEL_PATH=/app/models/rag
ZYNX_RAG_INDEX_PATH=/app/data/faiss_index

# Deeja AI
ZYNX_DEEJA_ENABLED=true
ZYNX_DEEJA_MODEL_PATH=/app/models/deeja
ZYNX_DEEJA_CULTURAL_CONTEXT=thai

# WebSocket
ZYNX_WEBSOCKET_ENABLED=true
ZYNX_WEBSOCKET_MAX_CONNECTIONS=1000
ZYNX_WEBSOCKET_HEARTBEAT_INTERVAL=30

# SSL/TLS (for production)
ZYNX_SSL_ENABLED=false
ZYNX_SSL_CERT_PATH=/etc/ssl/certs/zynx.crt
ZYNX_SSL_KEY_PATH=/etc/ssl/private/zynx.key

# CORS
ZYNX_CORS_ORIGINS=http://localhost:3000,http://localhost:8080
ZYNX_CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
ZYNX_RATE_LIMIT_ENABLED=true
ZYNX_RATE_LIMIT_REQUESTS_PER_MINUTE=100
ZYNX_RATE_LIMIT_BURST_SIZE=20

# Cache
ZYNX_CACHE_ENABLED=true
ZYNX_CACHE_TTL_SECONDS=3600
ZYNX_CACHE_MAX_SIZE=1000

# Backup
ZYNX_BACKUP_ENABLED=true
ZYNX_BACKUP_SCHEDULE=0 2 * * *
ZYNX_BACKUP_RETENTION_DAYS=30

# Performance
ZYNX_WORKER_PROCESSES=4
ZYNX_MAX_CONCURRENT_REQUESTS=1000
ZYNX_REQUEST_TIMEOUT_SECONDS=30

# Development (disabled in production)
ZYNX_DEV_MODE=false
ZYNX_HOT_RELOAD=false
ZYNX_DEBUG_TOOLBAR=false